@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

    <div class="text-center">
        <br /><br />
        <h1 class="display-4">What happened?</h1>
        <br /><hr /><br />
        @if (Model.CurrentUser.login != null)
        {
            <div class="row">
                <div class="col">
                    <h4>@Html.DisplayFor(m => m.CurrentUser.login) is logged in.</h4>
                </div>
                <br /><br /><br />
            </div>
            <hr /><br />
            <div class="row">

                <div class="col">
                    <form asp-page-handler="logout" method="post">
                        <button class="btn btn-dark">Log Out</button>
                    </form>
                </div>
                <div class="col">
                    <a asp-page="game" class="btn btn-dark">Start Game</a>
                </div>
                <div class="col">
                    <a asp-page="achievements" class="btn btn-dark">Achievements</a>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col">
                    <a asp-page="./login" class="btn btn-dark">Log In</a>
                </div>
                <div class="col">
                    <a asp-page="registration" class="btn btn-dark">Register</a>
                </div>
            </div>
        }
    </div>